<h1>Listing addons</h1>

<div id="addons" class="transitions-enabled">
  <% @addons.each do |addon| %>
      <div class="panel-body">
        <%= addon.description %>
        <%= addon.user.email if addon.user %>
        <%= link_to 'Show', addon_path(addon) %>
        <% if addon.user == current_user %>
          <%= link_to 'Edit', edit_addon_path(addon) %>
          <%= link_to 'Destroy', addon, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
  <% end %>
</div>

<br>
<% if user_signed_in? %>
    <%= link_to 'New Addon', new_addon_path %>
<% end %>    
